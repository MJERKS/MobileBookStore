@model IEnumerable<MobileBookStore.Model.Entities.User>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RealName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Administrator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RealName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @(item.Administrator != null ? "Yes" : "No")
        </td>
        <td>
            @(item.Publisher != null ? "Yes" : "No")
        </td>
        <td>
            @if (item.Publisher == null)
            {
                @Html.ActionLink("Promote To Publisher", "Promote", new { id=item.Id }) 
            }
            @if (item.Publisher == null && item.Administrator == null)
            {
                <span>|</span>
            }
            @if (item.Administrator == null)
            {
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            }
        </td>
    </tr>
}

</table>
